@{b}south@{ub} (@{b}s@{ub})
@{b}west@{ub} (@{b}w@{ub})
@{b}east@{ub} (@{b}e@{ub})
@{b}northwest@{ub} (@{b}nw@{ub})
@{b}northeast@{ub} (@{b}ne@{ub})
@{b}southwest@{ub} (@{b}sw@{ub})
@{b}southeast@{ub} (@{b}se@{ub})
@{b}up@{ub} (@{b}u@{ub})
@{b}down@{ub} (@{b}d@{ub})
@{b}in@{ub}
@{b}out@{ub}
@{b}exits@{ub} (V3/V4)
@{b}go to @{i}<previously-visited-location>@{ui}@{ub} (V4)
@{b}run to @{i}<previously-visited-location>@{ui}@{ub} (V4)
@{b}follow @{i}<character>@{ui}@{ub} (V4)
@{b}look@{ub}
@{b}wait@{ub}
@{b}wait for @{i}<character>@{ui}@{ub} (V4)
@{b}wait for @{i}<number-of-turns>@{ui}@{ub} (V4)
@{b}wait until @{i}<time>@{ui}@{ub} (V4)
@{b}inventory@{ub} (@{b}inv@{ub})
@{b}take@{ub} | @{b}get @{i}<object>@{ui}@{ub}
@{b}drop @{i}<object>@{ui}@{ub}
